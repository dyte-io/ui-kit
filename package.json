{
  "workspaces": [
    "packages/core",
    "packages/react-library",
    "packages/vue-library",
    "packages/angular-library"
  ],
  "scripts": {
    "prepare": "is-ci || husky install",
    "start": "npm start -w @dytesdk/ui-kit",
    "dev": "npm start",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm t --workspaces --if-present",
    "format": "prettier --write '**/src/**/*.{ts,tsx,js,css,html,json}'",
    "entropy": "lerna exec --concurrency 1 -- bash ../../entropy.sh",
    "fastdev": "./fastdev ../web-core"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^7.0.0",
    "is-ci": "^3.0.1",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "semantic-release": "^19.0.2",
    "semantic-release-monorepo": "^7.0.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
